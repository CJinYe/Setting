<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:orientation="horizontal">
    <ImageView android:id="@+id/item_bluetooth_file_iv_icon"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center_vertical"
               android:layout_margin="10dp"
               android:src="@drawable/fragment_bluetooth_file_unknowm"/>
    <TextView
        android:id="@+id/item_bluetooth_file_tv_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:textColor="#4f6624"
        android:textSize="25sp"/>
    <ImageButton
        android:id="@+id/item_bluetooth_file_but_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dp"
        android:background="@null"
        android:src="@drawable/sele_bluetooth_file_check"/>

</LinearLayout>