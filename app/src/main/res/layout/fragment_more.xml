<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        style="@style/Fragment_title_style"
        android:text="更多设置"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="490"
                  android:orientation="horizontal">

        <LinearLayout android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="0dp"
                          android:layout_weight="50"/>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="0dp"
                          android:layout_gravity="center_horizontal"
                          android:layout_weight="45"
                          android:orientation="horizontal">

                <LinearLayout android:layout_width="0dp"
                              android:layout_height="match_parent"
                              android:layout_weight="80"/>

                <TextView
                    android:id="@+id/fragment_more_edt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="248"
                    android:background="@drawable/dialog_edt_bg"
                    android:gravity="center"
                    android:hint="请输入密码"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textColor="@color/TextViewColor"/>
                <LinearLayout android:layout_width="0dp"
                              android:layout_height="match_parent"
                              android:layout_weight="17"/>
                <ImageButton
                    android:id="@+id/fragment_more_but_go"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="120"
                    android:background="@null"
                    android:scaleType="fitXY"
                    android:src="@drawable/sele_fragment_more_go"/>
                <LinearLayout android:layout_width="0dp"
                              android:layout_height="match_parent"
                              android:layout_weight="85"/>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="0dp"
                          android:layout_weight="100"
                          android:orientation="horizontal"
                          android:paddingTop="20dp">
                <LinearLayout android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:layout_weight="80"/>

                <LinearLayout android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:layout_weight="470">
                    <ImageButton android:id="@+id/fragment_more_but_show_pwd"
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:background="@null"
                                 android:src="@drawable/show_pwd_normal"/>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="0dp"
                          android:layout_weight="255"
                          android:orientation="vertical">
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="0dp"
                              android:layout_weight="1"
                              android:orientation="horizontal">
                    <ImageButton
                        android:id="@+id/fragment_more_but_number_1"
                        style="@style/Fragment_more_but_number"
                        android:src="@drawable/sele_fragment_more_1"/>
                    <LinearLayout android:layout_width="0dp"
                                  android:layout_height="match_parent"
                                  android:layout_weight="0.5"/>
                    <ImageButton
                        android:id="@+id/fragment_more_but_number_2"
                        style="@style/Fragment_more_but_number"
                        android:src="@drawable/sele_fragment_more_2"/>
                    <LinearLayout android:layout_width="0dp"
                                  android:layout_height="match_parent"
                                  android:layout_weight="0.5"/>
                    <ImageButton
                        android:id="@+id/fragment_more_but_number_3"
                        style="@style/Fragment_more_but_number"
                        android:src="@drawable/sele_fragment_more_3"/>
                </LinearLayout>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="0dp"
                              android:layout_weight="0.5"/>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="0dp"
                              android:layout_weight="1"
                              android:orientation="horizontal">
                    <ImageButton
                        android:id="@+id/fragment_more_but_number_4"
                        style="@style/Fragment_more_but_number"
                        android:src="@drawable/sele_fragment_more_4"/>
                    <LinearLayout android:layout_width="0dp"
                                  android:layout_height="match_parent"
                                  android:layout_weight="0.5"/>
                    <ImageButton
                        android:id="@+id/fragment_more_but_number_5"
                        style="@style/Fragment_more_but_number"
                        android:src="@drawable/sele_fragment_more_5"/>
                    <LinearLayout android:layout_width="0dp"
                                  android:layout_height="match_parent"
                                  android:layout_weight="0.5"/>
                    <ImageButton
                        android:id="@+id/fragment_more_but_number_6"
                        style="@style/Fragment_more_but_number"
                        android:src="@drawable/sele_fragment_more_6"/>

                </LinearLayout>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="0dp"
                              android:layout_weight="0.5"/>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="0dp"
                              android:layout_weight="1"
                              android:orientation="horizontal">
                    <ImageButton
                        android:id="@+id/fragment_more_but_number_7"
                        style="@style/Fragment_more_but_number"
                        android:src="@drawable/sele_fragment_more_7"/>
                    <LinearLayout android:layout_width="0dp"
                                  android:layout_height="match_parent"
                                  android:layout_weight="0.5"/>
                    <ImageButton
                        android:id="@+id/fragment_more_but_number_8"
                        style="@style/Fragment_more_but_number"
                        android:src="@drawable/sele_fragment_more_8"/>
                    <LinearLayout android:layout_width="0dp"
                                  android:layout_height="match_parent"
                                  android:layout_weight="0.5"/>
                    <ImageButton
                        android:id="@+id/fragment_more_but_number_9"
                        style="@style/Fragment_more_but_number"
                        android:src="@drawable/sele_fragment_more_9"/>
                </LinearLayout>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="0dp"
                              android:layout_weight="0.5"/>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="0dp"
                              android:layout_weight="1"
                              android:orientation="horizontal">
                    <ImageButton
                        android:id="@+id/fragment_more_but_number_0"
                        style="@style/Fragment_more_but_number"
                        android:src="@drawable/sele_fragment_more_0"/>
                    <LinearLayout android:layout_width="0dp"
                                  android:layout_height="match_parent"
                                  android:layout_weight="0.5"/>
                    <ImageButton
                        android:id="@+id/fragment_more_but_number_clear"
                        style="@style/Fragment_more_but_number"
                        android:src="@drawable/sele_fragment_more_clear"/>
                    <LinearLayout android:layout_width="0dp"
                                  android:layout_height="match_parent"
                                  android:layout_weight="0.5"/>
                    <ImageButton
                        android:id="@+id/fragment_more_but_number_complete"
                        style="@style/Fragment_more_but_number"
                        android:src="@drawable/sele_fragment_more_complete"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="0dp"
                          android:layout_weight="30"/>
        </LinearLayout>

        <LinearLayout android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>