<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="main_radio_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
    </style>

    <!--自定义对话框-->
    <style name="CustomDialog" parent="android:style/Theme.Dialog">
        <!-- 背景颜色及透明程度 -->
        <item name="android:windowBackground">@color/transparency</item>
        <!-- 是否qu标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFullscreen">true</item>
        <!-- 是否模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFrame">@null</item>
    </style>

    <style name="Fragment_title_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">85</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/TextViewColor</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Fragment_wifi_title_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">845</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/TextViewColor</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!--______________________________________Fragment_Store_________________________________________-->

    <style name="Fragment_store_seekbar_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:progressDrawable">@drawable/seek_bar_store_bg</item>
        <item name="android:thumb">@null</item>
    </style>
        <!--<item name="android:maxHeight">18dip</item>-->
        <!--<item name="android:minHeight">18dip</item>-->

    <style name="Fragment_store_save_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">38</item>
        <item name="android:background">@null</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@drawable/fragment_store_default_save_normal</item>
    </style>

    <style name="Fragment_store_save_button_style1">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">2</item>
        <item name="android:background">@null</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@drawable/fragment_store_default_save_normal</item>
    </style>

    <style name="Fragment_store_tv_save_info">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#4f6624</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Fragment_store_main_layout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/store_background</item>
        <item name="android:orientation">vertical</item>
    </style>
