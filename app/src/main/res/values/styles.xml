    <!--________________________________Fragment_More_______________________________________________-->

    <style name="Fragment_more_but_number">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:background">@null</item>
    </style>

    <!--________________________________Fragment_More_______________________________________________-->
    <style name="Fragment_scene_seekBar_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:maxHeight">8dp</item>
        <item name="android:minHeight">8dp</item>
